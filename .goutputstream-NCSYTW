# Edit commit messages in vim
[core]
  editor = /usr/bin/vim
# Correct typos
[help]
  autocorrect=1
# Push only the current branch to the remote branch it tracks
[push]
  default = tracking

# Aliases!
[alias]
  st = status -sb
  ci = commit
  ca = commit -a
  br = branch
  co = checkout
  df = diff
  dc = diff --cached

  # Fancy logging.
  #   h = head
  #   hp = head with patch
  #   r = recent commits, only current branch
  #   ra = recent commits, all reachable refs
  #   l = all commits, only current branch
  #   la = all commits, all reachable refs
  head = !git l -1
  h = !git head
  hp = "!. ~/.githelpers && show_git_head"
  r = !git l -20
  ra = !git r --all
  l = "!. ~/.githelpers && pretty_git_log"
  la = !git l --all

# Colors!
[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
  whitespace = red reverse
[color "status"]
  added = yellow
  changed = green
  untracked = cyan

# Highlight whitespace in diffs
[core]
  whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
